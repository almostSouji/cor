{
  "include": ["./src"],
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "lib": [
      "es2018",
      "esnext",
      "esnext.array",
      "esnext.asynciterable",
      "esnext.intl",
      "esnext.symbol",
      "dom"
    ],
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
  }
}
